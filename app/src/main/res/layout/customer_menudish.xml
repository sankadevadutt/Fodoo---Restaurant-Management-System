<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/home_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 20"
            android:clickable="true"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/home_dish"
            app:layout_constraintStart_toStartOf="@+id/home_dish"
            app:layout_constraintTop_toBottomOf="@+id/home_dish" />

        <ImageView
            android:id="@+id/home_product"
            android:layout_width="100dp"
            android:layout_height="118dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/coffee" />

        <TextView
            android:id="@+id/home_dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee"
            android:clickable="true"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/home_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/home_product"
            app:layout_constraintTop_toTopOf="@+id/home_product" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>